{% macro project_card(item) -%}
<div class="col-md-6 animate-box" data-animate-effect="{{ item.animateEffect | default('fadeInLeft') }}">
  <div class="project" style="background-image: url('{{ item.image }}');">
    <div class="desc">
      <div class="con">
        <h3><a href="{{ item.link }}" target="_blank">{{ item.title }}</a></h3>
        <span>{{ item.description }}</span>
        <p class="icon">
          <span><a href="{{ item.link }}" target="_blank">🔗 link </a></span>
          {% if item.pdf %}
            <span><a href="{{ item.pdf }}" target="_blank"><i class="icon-data"></i> 구현 기능 상세보기</a></span>
          {% endif %}
        </p>
      </div>
    </div>
  </div>
</div>
{%- endmacro %}